{
  "name": "boilingwater-app",
  "version": "0.1.4",
  "type": "module",
  "private": true,
  "description": "An interactive physics and chemistry learning game that starts with boiling water",
  "author": "Your Name",
  "license": "(GPL-3.0 AND CC-BY-NC-ND-4.0)",
  "homepage": "https://boilingwater.app",
  "scripts": {
    "postinstall": "patch-package",
    "generate-catalog": "node scripts/generateSubstanceCatalog.js",
    "wiki:build": "node wiki/src/index.js",
    "wiki:build:force": "node wiki/src/index.js --force",
    "wiki:sync": "node wiki/src/sync.js",
    "dev": "npm run generate-catalog && npm run wiki:build && npm run wiki:sync && vite",
    "build": "npm run generate-catalog && npm run wiki:build && npm run wiki:sync && vite build",
    "preview": "node scripts/preview-with-ready.js",
    "lint": "eslint src --ext js,jsx",
    "format": "prettier --write \"src/**/*.{js,jsx,css,md}\"",
    "test": "vitest",
    "test:ci": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui",
    "build:analyze": "vite build --mode analyze",
    "lighthouse": "dotenv -e .env.local lhci autorun"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@lhci/cli": "^0.15.0",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.2",
    "@vitejs/plugin-react": "^4.2.1",
    "@vitest/coverage-v8": "^4.0.18",
    "@vitest/ui": "^4.0.18",
    "chrome-launcher": "^1.2.1",
    "dotenv-cli": "^11.0.0",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-no-unsanitized": "^4.1.4",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-security": "^3.0.1",
    "glob": "^13.0.0",
    "globals": "^17.3.0",
    "jsdom": "^28.0.0",
    "kekule": "^1.0.3",
    "patch-package": "^8.0.1",
    "prettier": "^3.1.1",
    "rollup-plugin-visualizer": "^6.0.5",
    "sharp": "^0.34.5",
    "vite": "^5.0.8",
    "vitest": "^4.0.18"
  },
  "overrides": {
    "esbuild": "0.25.12",
    "tmp": "^0.2.5"
  }
}
